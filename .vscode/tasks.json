{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "mock-server",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "mock-server"
            ],
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "fileLocation": [
                    "relative",
                    "."
                ],
                "pattern": [
                    {
                        "regexp": ".*",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^",
                    "endsPattern": "Mock server listening on"
                }
            }
        }
    ]
}